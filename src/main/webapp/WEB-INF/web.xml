<?xml version="1.0" encoding="UTF-8"?>
<web-app
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="
		http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">
	
	<welcome-file-list>
		<welcome-file>
			index.jsp
		</welcome-file>
	</welcome-file-list>
	
	
	
	<!-- 	Application Context Configuration 
	
			This is the configuration for root/parent container for all servlets.
			This context is configured in applicationContext.xml by default.
			(Use context-param to define different context configuration location.)
			
			Holds all data that is shared by the servlets or that must be accessible
			to Spring Security. So this context holds DAOs and Services.-->

	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	
	
	
	<!--	Encoding Filter
	
			Force UTF-8 encoding. If not used, the server will not decode received data correctly.-->
			
	<filter>
	    <filter-name>characterEncodingFilter</filter-name>
	    <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
	    <init-param>
	        <param-name>encoding</param-name>
	        <param-value>UTF-8</param-value>
	    </init-param>
	    <init-param>
	        <param-name>forceEncoding</param-name>
	        <param-value>true</param-value>
	    </init-param>
	</filter>
	
	<filter-mapping>
	    <filter-name>characterEncodingFilter</filter-name>
	    <url-pattern>*</url-pattern>
	</filter-mapping>
	
	
	
	<!--	Security Filter
	
			This is the Spring Security filter configuration.
			It requires more configuration in the application context configuration to work.
			Can not be set up for a single servlet context. This is the reason why the application
			context is used at all in this project, and not only the child (servlet) context.-->
	
	<filter>
		<filter-name>springSecurityFilterChain</filter-name>
		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
	</filter>
	
	<filter-mapping>
		<filter-name>springSecurityFilterChain</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	
	
	<!--	DispatcherServlet
			
			Configuration for the single servlet used in this project.
			Servlets are configured in <servlet-name>-servlet.xml.
			So in this case the servlet is configured in GMM-servlet.xml-->
	
	<servlet>
		<servlet-name>GMM</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>GMM</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	
</web-app>